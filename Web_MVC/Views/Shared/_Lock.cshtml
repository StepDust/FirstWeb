@{
    string pwd = ViewData["Pwd"] + "";
    if (string.IsNullOrEmpty(pwd)) {
        pwd = "*#06#";
    }
}

<script>
    layer.prompt({
        title: '输入口令',
        formType: 1,
        shade: 1,
        offset:['25%','25%'],
        value:'#06#',
        closeBtn: false,
        success: function () {
            $(".layui-layer-prompt").find(".layui-layer-btn1").remove();
        }
    }, function (pass, index) {
        if(pass=="@pwd")
            layer.close(index);
        else {
            layer.msg("口令错误");
        }
    });
</script>
